<div class="mt-4">
    <div class="row">
        {{!--  diêm bat dau lặp --}}
        {{#each movietest}}
        <div class="col-sm-3">

            <div class="card card-movie-item">
            <img width="250" height="300" src="{{this.image}}" class="card-img-top img" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">{{this.type}}</p>
                <a href="#" class="btn btn-primary">Mua vé</a>                 
                <a href="/movie/{{this.slug}}" class="btn btn-primary">Chi tiết</a>
            
                    <span class="number">{{this.rating}}
                    </span>
                    <svg class="star" width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-star-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
</svg>
               
            </div>
            </div>
        </div>
        {{/each}}
        {{!--  điểm kết thúc --}}
    </div>
</div>