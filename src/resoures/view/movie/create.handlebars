<div class="mt-4">
    <h1>ĐĂNG NỘI DUNG PHIM</h1>
    {{!-- post đùng để gữi dữ liệu đi --}}
    <form method="POST" action="/movie/store">
  <div class="form-group">
    <label for="name"> Tên phim</label>
    <input type="text" class="form-control" id="name" name="name" >
  </div>
  <div class="form-group">
    <label for="description">Mô tả</label>
    <input type="text" class="form-control" id="description" name="description" >
  </div>
  <div class="form-group">
    <label for="trailer">Trailer</label>
    <input type="text" class="form-control" id="trailer" name="trailer" >
  </div>
  <div class="form-group">
    <label for="director">Đạo diễn</label>
    <input type="text" class="form-control" id="director" name="director" >
  </div>
  <div class="form-group">
    <label for="actor"> Diễn viên</label>
    <input type="text" class="form-control" id="actor" name="actor" >
  </div>
  <div class="form-group">
    <label for="type">Thể loại</label>
    <input type="text" class="form-control" id="type"name="type" >
  </div>
  <div class="form-group">
    <label for="length">Độ dài phim</label>
    <input type="text" class="form-control" id="length"name="length" >
  </div>
  <div class="form-group">
    <label for="language">Ngôn ngữ</label>
    <input type="text" class="form-control" id="language"name="language" >
  </div>
  <div class="form-group">
    <label for="rating">Đánh giá</label>
    <input type="text" class="form-control" id="rating"name="rating" >
  </div>
  
  <button type="submit" class="btn btn-primary">Gửi</button>
</form>
</div>